{
  "webhook": {
    "event": "{{ headers.X-Contentful-Topic }}",
    "environment": "{{ sys.environment.sys.id }}",
    "space": "{{ sys.space.sys.id }}",
    "triggeredAt": "{{ sys.updatedAt }}"
  },
  "post": {
    "id": "{{ sys.id }}",
    "contentType": "{{ sys.contentType.sys.id }}",
    "slug": "{{ fields.slug.en-US }}",
    "title": "{{ fields.title.en-US }}",
    "summary": "{{ fields.summary.en-US }}",
    "excerpt": "{{ fields.excerpt.en-US }}",
    "publishedAt": "{{ sys.publishedAt }}",
    "version": "{{ sys.revision }}"
  },
  "author": {
    "name": "{{ fields.author.en-US.fields.name.en-US }}",
    "id": "{{ fields.author.en-US.sys.id }}"
  },
  "status": {
    "published": "{{ sys.publishedAt != null }}",
    "archived": "{{ sys.archivedAt != null }}"
  }
}